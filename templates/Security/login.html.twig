{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container mt-5 my-auto">

<div class="row h-100 d-flex flex-column align-items-center justify-content-center">

<form method="post" class="col-md-12 col-lg-6 ">


    <h1 class="h3 mb-3 font-weight-normal">Se connecter :</h1>
    <div class="d-flex flex-column">
    
    <label for="inputEmail" class="form-label mx-auto ">Email</label>
    <input  type="email" value="{{ last_username }}" name="email" id="inputEmail" class="email-input col-lg-12 col-xl-8 mx-auto my-auto"  autocomplete="email" required autofocus>
    
    </div>
    
    <div class="d-flex flex-column">
     <label for="inputPassword" class="mx-auto">mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="p-1 col-md-4 col-lg-12 col-xl-8 mx-auto" autocomplete="current-password" required>
    
    
    </div>
   

  
    

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

<div class="col-lg-12 d-flex">
 <button class="search-button col-lg-4 mt-2 mx-auto" type="submit">
        se connecter
    </button>
</div>
   
</form>
</div>
</div>

{% include "include/_footer.inc.html.twig" %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('cookies') }}
{% endblock %}
